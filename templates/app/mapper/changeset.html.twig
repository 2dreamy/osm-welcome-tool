<li class="py-2">
    <div class="min-w-0 flex-1 sm:flex sm:items-start sm:justify-between">
        <div class="truncate">
            <div class="text-sm font-medium text-indigo-600 truncate">
                Changeset #{{ changeset.id }}
            </div>
            <div class="text-sm font-medium text-gray-500">
                <time datetime="{{ changeset.createdAt | date('c') }}">
                    {{ changeset.createdAt | format_date('long') }}
                </time>
            </div>
        </div>
        <div class="sm:ml-5">
            <span class="relative z-0 inline-flex shadow-sm rounded-md">
                <a class="relative flex items-center px-2 py-1 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 focus:z-10 focus:outline-none focus:ring-1 focus:ring-indigo-500 focus:border-indigo-500"
                    target="_blank" href="https://www.openstreetmap.org/changeset/{{ changeset.id }}">
                    {{ 'View' | trans }}
                </a>
                <span class="-ml-px relative block">
                    <button type="button"
                        class="relative flex items-center px-1 py-1 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50 focus:z-10 focus:outline-none focus:ring-1 focus:ring-indigo-500 focus:border-indigo-500"
                        id="option-menu-button" aria-expanded="true" aria-haspopup="true">
                        <span class="sr-only">{{ 'Open other tools' | trans }}</span>
                        <!-- Heroicon name: solid/chevron-down -->
                        <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"
                            aria-hidden="true">
                            <path fill-rule="evenodd"
                                d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                                clip-rule="evenodd" />
                        </svg>
                    </button>

                    <!--
                            Dropdown menu, show/hide based on menu state.

                            Entering: "transition ease-out duration-100"
                            From: "transform opacity-0 scale-95"
                            To: "transform opacity-100 scale-100"
                            Leaving: "transition ease-in duration-75"
                            From: "transform opacity-100 scale-100"
                            To: "transform opacity-0 scale-95"
                        -->
                    <div class="hidden origin-top-right absolute right-0 mt-2 -mr-1 w-56 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 focus:outline-none"
                        role="menu" aria-orientation="vertical" aria-labelledby="option-menu-button" tabindex="-1">
                        <div class="py-1" role="none">
                            <!-- Active: "bg-gray-100 text-gray-900", Not Active: "text-gray-700" -->
                            <a class="text-gray-700 block px-4 py-2 text-sm hover:bg-gray-100 hover:text-gray-900"
                                role="menuitem" tabindex="-1" id="option-menu-item-0" target="_blank"
                                href="https://osmcha.org/changesets/{{ changeset.id }}">
                                OSMCha
                            </a>
                            <a class="text-gray-700 block px-4 py-2 text-sm hover:bg-gray-100 hover:text-gray-900"
                                role="menuitem" tabindex="-1" id="option-menu-item-1" target="_blank"
                                href="https://overpass-api.de/achavi/?changeset={{ changeset.id }}&relations=true">
                                achavi
                            </a>
                            <a class="text-gray-700 block px-4 py-2 text-sm hover:bg-gray-100 hover:text-gray-900"
                                role="menuitem" tabindex="-1" id="option-menu-item-2" target="_blank"
                                href="https://osmhv.openstreetmap.de/changeset.jsp?id={{ changeset.id }}">
                                OSM History Viewer
                            </a>
                            <a class="text-gray-700 block px-4 py-2 text-sm hover:bg-gray-100 hover:text-gray-900"
                                role="menuitem" tabindex="-1" id="option-menu-item-3" target="_blank"
                                href="https://osmlab.github.io/changeset-map/#{{ changeset.id }}">
                                OSM Lab
                            </a>
                        </div>
                    </div>
                </span>
            </span>
        </div>
    </div>
    <div class="mt-1 text-sm text-gray-700">
        <p>{{ changeset.comment }}</p>
    </div>
    <div>
        {# All changesets from a new mapper are flagged as suspect
        {% if changeset.suspect == true %}
        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-yellow-100 text-yellow-800">
            {{ 'Suspect' | trans }}
        </span>
        {% endif %}
        #}
        {% if changeset.harmful == true %}
        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800">
            {{ 'Harmful' | trans }}
        </span>
        {% endif %}
        {% if changeset.checked == true %}
        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
            {{ 'Checked' | trans }}
        </span>
        {% endif %}
        {% for reason in changeset.reasons | filter(r => r != 'New mapper') %}
        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
            {{ reason | trans }}
        </span>
        {% endfor %}
    </div>
</li>